<Window x:Class="BatchDataEntry.Views.Documento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BatchDataEntry.ViewModels"
        xmlns:customComponents="clr-namespace:BatchDataEntry.Components"
        xmlns:helpers="clr-namespace:BatchDataEntry.Helpers"
        xmlns:providers="clr-namespace:BatchDataEntry.Providers"
        xmlns:editors="http://wpfcontrols.com/"
        xmlns:wpfTextBoxAutoComplete="clr-namespace:WPFTextBoxAutoComplete;assembly=WPFTextBoxAutoComplete"
        helpers:MyAttachedBehaviors.LoadedCommand="{Binding Path=CmdWindowLoaded}"
        mc:Ignorable="d"
        x:Name="DocumentWindow"        
        Title="{Binding Path=DocFile.FileName}" Height="650" Width="800">
    <Window.DataContext>
        <viewModels:ViewModelDocumento></viewModels:ViewModelDocumento>
    </Window.DataContext>

    <Window.Resources>
        <providers:CsvSuggestionProvider x:Key="CsvSuggestionProvider"/>
        <DataTemplate x:Key="SuggestionTemplate">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=ColumnA}"/>
                    <TextBlock Text="{Binding Path=ColumnB}" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <!-- normal template -->
        <DataTemplate x:Key="TextBoxDataTemplate">
            <StackPanel Margin="5,0,5,0">
            <Label Content="{Binding Key, Mode=OneTime}" FontSize="14"/>
            <TextBox
                Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                helpers:FocusExtension.IsFocused="{Binding Path=IsFocused}" 
                IsEnabled="{Binding Path=IsDisabled}"
                VerticalAlignment="Center"
                Height="30"/>
            </StackPanel>
        </DataTemplate>
        <!-- db template -->
        <DataTemplate x:Key="AutocompleteDbDataTemplate">
            <StackPanel Margin="5,0,5,0">
                <Label Content="{Binding Key, Mode=OneTime}" FontSize="14"/>
                <TextBox 
                    helpers:FocusExtension.IsFocused="{Binding Path=IsFocused}" 
                    IsEnabled="{Binding Path=IsDisabled}"
                    VerticalAlignment="Center"
                    Height="30"
                    Width="352"
                    Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    wpfTextBoxAutoComplete:AutoCompleteBehavior.AutoCompleteItemsSource="{Binding dbQueryProvider, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                    wpfTextBoxAutoComplete:AutoCompleteBehavior.AutoCompleteStringComparison="InvariantCultureIgnoreCase">
                </TextBox>
            </StackPanel>
        </DataTemplate>
        <!-- csv template -->
        <DataTemplate x:Key="AutocompleteCsvDataTemplate">
            <StackPanel Margin="5,0,5,0">
                <Label Content="{Binding Key, Mode=OneTime}" FontSize="14"/>
                <!-- autocompletetextbox -->
                <editors:AutoCompleteTextBox
                    helpers:FocusExtension.IsFocused="{Binding Path=IsFocused}" 
                    IsEnabled="{Binding Path=IsDisabled}"
                    Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    DisplayMember="ColumnA"
                    Height="30"
                    Width="352"
                    Provider="{StaticResource ResourceKey=CsvSuggestionProvider}"
                    ItemTemplate="{StaticResource ResourceKey=SuggestionTemplate}">
                    <editors:AutoCompleteTextBox.SelectedItem>
                        <Binding Path="AutoSelectedItem" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"></Binding>
                    </editors:AutoCompleteTextBox.SelectedItem>
                    <editors:AutoCompleteTextBox.LoadingContent>
                        <TextBox Text="Loading..." Margin="5" FontSize="14"></TextBox>
                    </editors:AutoCompleteTextBox.LoadingContent>
                    <editors:AutoCompleteTextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.TextboxCmd}" CommandParameter="{Binding AutoSelectedItem}"></KeyBinding>
                    </editors:AutoCompleteTextBox.InputBindings>
                </editors:AutoCompleteTextBox>
                <!-- end -->
            </StackPanel>
        </DataTemplate>
        <helpers:ListControlTemplateSelector x:Key="ListControlTemplateSelector"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <customComponents:PdfViewerHost x:Name="PdfViewerUc" PdfPath="{Binding Path=DocFile.Path, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Focusable="False" helpers:FocusExtension.IsFocused="False"/>
        <Grid Grid.Column="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0">
                <StackPanel x:Name="dataEntryElements" Margin="10,0">
                    <ItemsControl ItemsSource="{Binding Path=DocFile.Voci, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemTemplateSelector="{StaticResource ListControlTemplateSelector}">
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="1" Height="40" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="buttonIndexes" Command="{Binding Path=CmdIndex}" Content="Indicizza" VerticalAlignment="Center" HorizontalAlignment="Right" Height="35" Width="82" Margin="5,0,5,0"/>
                <Button x:Name="buttonPrevious" Command="{Binding Path=CmdPrev}" Content="&lt;" VerticalAlignment="Center" HorizontalAlignment="Right" Height="35" Width="82" Margin="5,0,5,0" FontSize="22" FontWeight="Bold"/>
                <Button x:Name="buttonNext" Command="{Binding Path=CmdNext}" Content="&gt;" VerticalAlignment="Center" HorizontalAlignment="Right" Height="35" Width="82" Margin="5,0,5,0" FontSize="22" FontWeight="Bold"/>
                <Button x:Name="buttonStop" Click="ButtonStop_OnClick" Command="{Binding Path=CmdStop}" Content="Interrompi" VerticalAlignment="Center" HorizontalAlignment="Right" Height="35" Width="82" Margin="5,0,5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>



