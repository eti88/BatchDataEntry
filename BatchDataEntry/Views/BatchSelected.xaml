<Window x:Class="BatchDataEntry.Views.BatchSelected"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchDataEntry.Views"
        mc:Ignorable="d"
        Title="Batch Selected" 
        Height="400" 
        Width="540"
        MinWidth="400"
        MinHeight="540">
    <Grid>
        <DockPanel LastChildFill="True">
            <DockPanel LastChildFill="True" DockPanel.Dock="Top" Height="465">
                <StackPanel Width="237" DockPanel.Dock="Left" Margin="0,10">
                    <DataGrid x:Name="dataGridRecords" VerticalAlignment="Top" Height="410" Margin="0,5,0,0"/>
                    <WrapPanel Height="30" VerticalAlignment="Bottom" Margin="5,0,0,0" HorizontalAlignment="Right">
                        <Button x:Name="buttonModificaGridRecords" Content="Modifica" Width="50" Margin="0,5,10,0"/>
                        <Button x:Name="buttonEliminaGridRecords" Content="Elimina" Width="50" Margin="0,5,0,0"/>
                    </WrapPanel>

                </StackPanel>
                <StackPanel Height="455" Width="279" DockPanel.Dock="Right" Margin="10,0,0,0" HorizontalAlignment="Left">
                    <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Numero documenti: " Margin="5"/>
                    <TextBlock x:Name="textBlock_Copy" TextWrapping="Wrap" Text="Numero pagine:" Margin="5"/>
                    <TextBlock x:Name="textBlock_Copy1" TextWrapping="Wrap" Text="Dimensione:" Margin="5"/>
                    <TextBlock x:Name="textBlock_Copy2" TextWrapping="Wrap" Text="Documento corrente:" Margin="5"/>
                    <TextBlock x:Name="textBlock_Copy3" TextWrapping="Wrap" Text="Ultimo inserimento:" Margin="5"/>
                </StackPanel>
            </DockPanel>
            <StackPanel Height="30" DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button x:Name="buttonChiudiBatch" Content="Chiudi" Height="20" Width="75" Margin="5"/>
                <Button x:Name="buttonContiunaInserimento" Content="Continua" Height="20" Width="75" Margin="5"/>
                <Button x:Name="buttonCheck" Content="Check" Height="20" Width="75" Margin="5"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
