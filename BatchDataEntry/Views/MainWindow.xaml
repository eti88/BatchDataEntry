<Window x:Class="BatchDataEntry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BatchDataEntry.ViewModels"
        xmlns:helpers="clr-namespace:BatchDataEntry.Helpers"
        xmlns:local="clr-namespace:BatchDataEntry"
        mc:Ignorable="d"
        Title="Batch" 
        Height="465" 
        Width="566.15"
        MinWidth="560"
        MaxWidth="560"
        DataContext="{DynamicResource ViewModelMain }" Loaded="Window_Loaded">
    <Window.Resources>
        <vm:ViewModelMain x:Key="ViewModelMain"/>
    </Window.Resources>

    <Grid HorizontalAlignment="Left">
        <DockPanel LastChildFill="True">
            <ListBox x:Name="listBoxBatches" Margin="10,10,0,8" Width="286" DockPanel.Dock="Left" ItemsSource="{Binding Batches, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" SelectedItem="{Binding SelectedBatch}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,5" >
                            <TextBlock Text="{Binding Nome}" FontSize="14" FontFamily="Segoe UI"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel DockPanel.Dock="Right" Width="230" Margin="20,10,0,10" HorizontalAlignment="Right">
                <Button x:Name="buttonNewBatch" Command="{Binding Path=NewCommand}" Content="Nuovo Batch" Style="{StaticResource GenericButton}" Margin="0,20,0,0" />
                <Button x:Name="buttonModifyBatch" Command="{Binding Path=ModifyCommand}"  Content="Modifica" Style="{StaticResource GenericButton}" Margin="45,20,45,0"/>
                <Button x:Name="buttonResumeBatch" Command="{Binding Path=ResumeCommand}"  Content="Continua" Style="{StaticResource GenericButton}" Margin="0,20,0,0"/>
                <Button x:Name="buttonAddApp" Command="{Binding Path=ModelAddCommand}"  Content="Modelli" Style="{StaticResource GenericButton}" Margin="0,20,0,0"/>
                <Button x:Name="buttonDeleteBatch" Command="{Binding Path=DeleteCommand}"  Content="Elimina" Style="{StaticResource GenericButton}" Margin="0,20,0,0" Background="#FFE02B2B" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
