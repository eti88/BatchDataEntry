<Window x:Class="BatchDataEntry.Views.NuovoBatch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchDataEntry.Views"
        mc:Ignorable="d"
        Title="Nuovo Batch" Height="310" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="True" Grid.RowSpan="2">
            <StackPanel Height="240" Background="#FFF0F0F0" DockPanel.Dock="Top">
                <Label x:Name="label" Content="Nome" FontSize="11"/>
                <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text="TextBoxNome" Margin="10,5,10,0" FontSize="11"/>
                <Label x:Name="label1" Content="Tipo file"/>
                <ComboBox x:Name="comboBox" Margin="10,0"/>
                <Label x:Name="label2" Content="Directory di Input"/>
                <WrapPanel Height="24" Margin="10,10,10,0">
                    <TextBox x:Name="textBox1" Height="23" TextWrapping="Wrap" Text="TextBoxSelectDir" Width="245" Margin="0,0,5,0" FontSize="11"/>
                    <Button x:Name="button2" Content="..." Width="22"/>
                </WrapPanel>
                <Label x:Name="label3" Content="Directory di Output"/>
                <WrapPanel Height="24" Margin="10,10,10,0">
                    <TextBox x:Name="textBox2" Height="23" TextWrapping="Wrap" Text="TextBoxSelectDir" Width="245" Margin="0,0,5,0" FontSize="11"/>
                    <Button x:Name="button3" Content="..." Width="22"/>
                </WrapPanel>
            </StackPanel>
            <WrapPanel Height="30" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
                <Button x:Name="buttonCancella" Click="ButtonCancella_Click" Content="Cancella" Height="20" VerticalAlignment="Center" Width="75" Margin="0,5,10,5" FontSize="11"/>
                <Button x:Name="buttonContinua" Click="ButtonContinua_OnClick" Content="Continua" Height="20" VerticalAlignment="Center" Width="75" RenderTransformOrigin="1.84,0.65" Margin="0,5" FontSize="11"/>
            </WrapPanel>
        </DockPanel>

    </Grid>
</Window>
