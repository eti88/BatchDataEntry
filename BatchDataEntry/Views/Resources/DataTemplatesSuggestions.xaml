<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BatchDataEntry.Views.Resources">
    <DataTemplate x:Key="SuggestionTemplateSingleColumn">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Valore}"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="SuggestionTemplateDoubleColumn">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=ColumnA}"/>
                <TextBlock Text="{Binding Path=ColumnB}" FontSize="10" Foreground="Gray"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="SuggestionLocalita">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Valore}"/>
                <TextBlock Text="{Binding Path=Pv}" Foreground="Gray" Padding="5,0,5,0"/>
                <TextBlock Text="{Binding Path=Cap}" />
            </StackPanel>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>