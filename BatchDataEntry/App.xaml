<Application x:Class="BatchDataEntry.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BatchDataEntry"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             Startup="Application_Startup"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Resource dictionaries -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Resources/Styles.xaml"/>
                <ResourceDictionary Source="Views/Resources/DataTemplatesTextbox.xaml"/>
                <ResourceDictionary Source="Views/Resources/Errors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
